@model Insight.Portal.App.Models.SelectUserRolesViewModel

@{
    ViewBag.Title = "User Roles";
    Layout = null;
}

@using (Html.BeginForm("UserRoles", "Account", FormMethod.Post, new { encType = "multipart/form-data", name = "myform" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h3 class="modal-title">Roles for user @Html.DisplayFor(model => model.UserName)</h3>
    </div>
    <div class="modal-body">
        <div class="form-horizontal">
            <div class="form-group">
                <div class="col-md-12">
                    <h4>Select Role Assignments</h4>
                </div>
            </div>
            <div class="form-group">
                @Html.HiddenFor(model => model.UserName)
                <div class="col-md-12">
                    @Html.EditorFor(m => m.Roles)
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-success" data-toggle="tooltip" data-placement="bottom" title="Save Roles">Save</button>
        <button type="button" class="btn btn-default" data-dismiss="modal" data-toggle="tooltip" data-placement="bottom" title="Cancel">Cancel</button>
    </div>
}


